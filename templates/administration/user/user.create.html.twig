{% block javascripts %}
	{{ parent() }}

	<script>
		// AFFICHAGE DES NOM DES FICHIER UPLOADE
$(document).ready(function () {
var id = $('.custom-file input').attr('id');
$('#' + id).on('change', function () {
var fileName = $(this).val();
fileName = fileName.replace('C:\\fakepath\\', " ");
$(this).next('.custom-file-label').html(fileName);
});
});
	</script>
	<script type="text/javascript">
		$('.image-collection').collection({
up: '<a href="#" class="btn-collection btn-sm text-primary" title="Move up"><i class="fas fa-caret-up"></i></a>',
down: '<a href="#" class="btn-collection btn-sm text-primary" title="Move down"><i class="fas fa-caret-down"></i></a>',
add: '<a href="#" class="btn-collection btn btn-sm btn-secondary" title="Add"><i class="fas fa-plus"> Ajouter</i></a>',
remove: '<a href="#" class="btn-collection btn-sm text-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>',
allow_duplicate: false,
after_add: function (collection, element) {
var id = $('.custom-file input').attr('id');
console.log(id);
var index = element.index();
var idArray = id.split("_");
var newId = '';
for (var i = 0; i < idArray.length; i++) {
var splitedId = idArray[i];

if (isNaN(splitedId)) {
newId = (newId == '') ? splitedId : newId + '_' + splitedId;
} else {
newId = newId + '_' + index;
}

}
console.log(newId);
$('#' + newId).on('change', function () {
var fileName = $(this).val();
fileName = fileName.replace('C:\\fakepath\\', " ");
console.log(fileName)
$(this).next('.custom-file-label').html(fileName);
});
}
});
	</script>
{% endblock %}
