{% extends 'base.administration.html.twig' %}
{% block title %}Profile utilisateur : {{ user.getFullName }}{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block body %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Utilisateur</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <i class="fas fa-user-shield ariane-icon-margin"></i>
                            <a href="{{ path('dashboard') }}" class="ariane-element">Dashboard</a>
                             <a href="{{ path('admin_users_list') }}" class="ariane-element">Utilisateurs</a>
                        </li>
                        <li class="breadcrumb-item active">{{ user.getFullName }}</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Fiche utilisateur</h3>
                            <a href="{{ path('admin_users_list') }}" type="button" class="btn btn-success" style="float: right !important;">
                                <i class="fas fa-arrow-circle-left" style="color: rgba(0, 251, 45, 1) !important; font-weight: bold !important;"></i>&nbsp;&nbsp;Retour à la liste des utilisateurs</a>
                        </div>
                        <!-- /.card-header -->
                        <div class="col-12 col-sm-12">
                            <div class="card bg-light d-flex flex-fill">
                                <div class="card-header text-muted border-bottom-0">
                                    {% for key, role in user.roles %}
                                        {% if key != user.roles|length - 1 %}
                                            {{ role }} -
                                        {% else %}
                                            {{ role }}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                        <h2 class="lead"><b>{{ user.getFullName }}</b></h2>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-user"></i></span> Nom complet: {{ user.getFullName }}</li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-envelope-open-text"></i></span> Email: {{ user.email }}</li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-user-circle"></i></span> Compte:&nbsp;
                                                {% if user.isVerified == 1 %}
                                                    <i class="fas fa-check-circle" style="color: rgba(0, 251, 45, 1) !important"></i>
                                                {% elseif user.isVerified == 0 %}
                                                    <i class="fas fa-check-circle" style="color: rgba(215, 215, 215, 1) !important"></i>
                                                {% else %}
                                                    Statut inconnu
                                                {% endif %}
                                            </li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-user-circle"></i></span> CGU:&nbsp;
                                                {% if user.agreeTerms == 1 %}
                                                    <i class="fas fa-check-circle" style="color: rgba(0, 251, 45, 1) !important"></i>
                                                    {% elseif user.agreeTerms == 0 %}
                                                        <i class="fas fa-check-circle" style="color: rgba(215, 215, 215, 1) !important"></i>
                                                        {% else %}
                                                            État CGU inconnu
                                                {% endif %}
                                            </li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-shield-alt"></i></span> Statut du compte:&nbsp;
                                                {% if user.status == 0 %}
                                                    Non actif
                                                    {% elseif user.status == 1 %}
                                                    Actif
                                                    {% else %}
                                                        Autres statuts à gérer...
                                                        <!--Les autres status sont à gérer.-->
                                                {% endif %}
                                            </li>
                                            
                                        </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                        <img src="{{ asset('assets/back-office/dist/img/user1-128x128.jpg') }}" alt="user-avatar" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" type="button" class="btn btn-primary"><i class="fas fa-user-edit"></i>&nbsp;&nbsp;Mettre à jour</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-md-6">
                </div>
            </div>
            <!-- /.row -->
        </div>
    </section>
{% endblock %}
{% block javascripts %}
{% endblock %}