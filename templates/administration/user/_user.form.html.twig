{{ form_start(form) }}
{% form_theme form.personnel.idcard 'administration/jquery.collection.html.twig' %}
<div class="card-body">
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<label>Prénom</label>
				{{ form_row(form.personnel.firstName, {'label': false, 'attr': {'placeholder': false, 'class': 'form-control'}}) }}
			</div>
		</div>
		{% if form.vars.value.id is empty %}
			<div class="col-sm-6">
				<div class="form-group">
					<label>Nom</label>
					{{ form_row(form.personnel.lastName, {'label': false, 'attr': {'placeholder': false,'class': 'form-control'}}) }}
				</div>
			</div>
		{% endif %}
	</div>
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<label>Email</label>
				{{ form_row(form.email, {'label': false, 'attr': {'placeholder': false, 'class': 'form-control'}}) }}
			</div>
		</div>
		{% if form.vars.value.id is empty %}
			<div class="col-sm-6">
				<div class="form-group">
					<label>Mot de passe</label>
					{{ form_row(form.password, {'label': false, 'attr': {'placeholder': false,'class': 'form-control'}}) }}
				</div>
			</div>
		{% endif %}
	</div>

	<div class="row">
		<div class="col-sm-6">
			<div class="row">
				<div class="col-sm-4">
					<div class="form-group">
						<label>Date de naissance</label>
						{{ form_row(form.personnel.dob, {'label': false}) }}
					</div>
				</div>
				<div class="col-sm-4">
					<div class="form-group">
						<label>N° de carte Identité</label>
						{{ form_row(form.personnel.idNumber, {'label': false, 'attr': {'placeholder': false}}) }}
					</div>
				</div>

			</div>
		</div>
		<div class="col-sm-6">
			<div class="row">

				<div class="col-sm-4">
					<div class="form-group">
						<label>Compte vérifié ?</label>
						{{ form_row(form.isVerified, {'label': false, 'attr': {'placeholder': false,'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-sm-4">
					<div class="form-group">
						<label>Validaiton CGU ?</label>
						{{ form_row(form.agreeTerms, {'label': false, 'attr': {'placeholder': false,'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="col-sm-4">
					<div class="form-group">
						<label>Statut</label>
						{{ form_row(form.status, {'label': false, 'attr': {'placeholder': 'Statut','class': 'form-control'}}) }}
					</div>
				</div>

			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
			<div class="form-group">
				<label>Ajouter carte identité</label>
				{{ form_row(form.personnel.idcard, {'label': false}) }}
			</div>
		</div>

		<div class="col-sm-6">
			<div class="form-group">
				<label>Rôles</label>
				{{ form_row(form.roles, {'label': false, 'attr': {'placeholder': 'Rôles de l\'utoilisateur'}}) }}
            </div>
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
